@model POS.Model.USUARIO

@{
    ViewBag.Title = "Login";
}

<fieldset style="margin:auto; width:35%; border:1px solid groove;">
    <legend>Ingreso</legend>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <table>
            <tr>
                <td colspan="3">
                   @ViewBag.errorMessage
                </td>
            </tr>
            <tr>
                <td>Usuario</td>
                <td>@Html.TextBoxFor(usr => usr.usuario1)</td>
                <td></td>
            </tr>
            <tr>
                <td>Clave</td>
                <td>@Html.PasswordFor(usr => usr.clave)</td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Ingresar" /></td>
                <td></td>
            </tr>

        </table>
    }
</fieldset>

