@model POS.Model.USUARIO

@{
    ViewBag.Title = "Nuevo";
}


@using (Html.BeginForm("Nuevo", "Usuario", FormMethod.Post))
{
    <h2>Modificar registro</h2>

    <table>
        <tr>
            <td>ID</td>
            <td>@Html.TextBoxFor(m => m.DUI)</td>
        </tr>
        <tr>
            <td>Nombre</td>
            <td>@Html.TextBoxFor(m => m.nombre)</td>
        </tr>
        <tr>
            <td>Descipcion</td>
            <td>@Html.TextBoxFor(m => m.sexo)</td>
        </tr>
        <tr>
            <td>Activo</td>
            <td>@Html.TextBoxFor(m => m.activo)</td>
        </tr>
        <tr>
            <td>Clave</td>
            <td>@Html.TextBoxFor(m => m.clave)</td>
        </tr>
        <tr>
            <td></td>
            <td>@Html.TextBoxFor(m => m.ROL1.nombre)</td>
        </tr>
        <tr>
            <td><input type="submit" value="Guardar" class="btn btn-primary" /></td>
        </tr>
    </table>
}